{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:app:default",
    "core:event:default",
    "core:image:default",
    "core:menu:default",
    "core:path:default",
    "core:resources:default",
    "core:tray:default",
    "core:window:default",
    "dialog:allow-ask",
    "dialog:allow-confirm",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:default",
    "fs:default",
    {
      "identifier": "fs:write-files",
      "allow": [{
        "path": "$APPDATA/**/*"
      }]
    },
    {
      "identifier": "fs:read-files",
      "allow": [{
        "path": "$APPDATA/**/*"
      }]
    },
    "shell:allow-execute",
    "shell:allow-open",
    "shell:default",
    "sql:allow-close",
    "sql:allow-load",
    "sql:allow-select",
    "sql:default",
    "core:window:allow-destroy"
  ]
}