{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "path:default",
    "event:default",
    "window:default",
    "app:default",
    "image:default",
    "resources:default",
    "menu:default",
    "tray:default",
    "shell:allow-open",
    {
      "identifier": "fs:read-files",
      "allow": [{"path": "$DESKTOP/**"}, {"path": "$APP/**"}, {"path": "$RESOURCE/**"}]
    },
    "fs:write-files",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-ask",
    "dialog:allow-confirm",
    "sql:allow-close",
    "sql:allow-execute",
    "sql:allow-load",
    "sql:allow-select"
  ]
}