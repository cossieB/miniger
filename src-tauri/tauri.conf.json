{
  "productName": "miniger",
  "version": "0.0.0",
  "identifier": "com.miniger.dev",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "miniger",
        "height": 720,
        "width": 1280,
        "dragDropEnabled": false,
        "maximized": true,
        "label": "main",
        "visible": true,
        "url": "/splash"
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost blob:; media-src 'self' asset: http://asset.localhost; font-src 'self' data:",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      }
    }
  },
  "plugins": {
    "sql": {
      "preload": [
        "sqlite:mngr.db"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}